<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="buttonStyle">@style/main_button</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size26</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_mini_icons</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="settings_btn" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mini_text_size16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="android:drawableTint">@color/text_grey</item>


    </style>





    <style name="settings_btn_switch" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_switch</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="thumbTint">@color/text_grey</item>
        <item name="trackTint">@color/light_grey</item>
        <item name="iconPadding">@dimen/padding16</item>
    </style>

    <style name="settings_btn_title" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size26</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_btn_title_icon" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_title_icon</item>
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:layout_marginTop">@dimen/margin_top18</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="track_icon" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/track_icon</item>
        <item name="android:layout_width">@dimen/dp45</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginLeft">@dimen/dp13</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        <item name="iconSize">45dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/text_grey</item>
    </style>

    <style name="main_menu">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="color_rv_search">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="color_rv_search_small_text">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/sp11</item>
        <item name="iconTint">@color/text_grey</item>
    </style>

    <style name="search_line">
        <item name="android:textColorHint">@color/text_grey</item>

        <item name="tint">@color/text_grey</item>
        <item name="iconTint">@color/text_grey</item>
    </style>

    <style name="no_results_placeholder" parent="">
        <item name="android:src">@drawable/no_results_light_mode_placeholder</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="server_error_placeholder" parent="">
        <item name="android:src">@drawable/server_error_light_mode</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_white_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="track_icon_player" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/track_icon_player</item>
        <item name="iconTint">@color/text_grey</item>
    </style>

    <style name="btn_small_player" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/btn_small_player</item>
        <item name="iconTint">@color/text_grey</item>
    </style>

    <style name="white_at_night_black_at_day">
        <item name="buttonStyle">@style/white_at_night_black_at_day</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="white_at_night_black_at_day_medium" parent="@style/white_at_night_black_at_day">
        <item name="buttonStyle" type="style">@style/white_at_night_black_at_day_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="white_at_night_black_at_day_regular" parent="@style/white_at_night_black_at_day">
        <item name="buttonStyle" type="style">@style/white_at_night_black_at_day_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="btn_add_to_playlist">
        <item name="buttonStyle" type="style">@style/btn_add_to_playlist</item>
        <item name="android:src">@drawable/add_to_playlist_btn_d</item>
    </style>

    <style name="btn_like_playlist">
        <item name="buttonStyle" type="style">@style/btn_like_playlist</item>
        <item name="android:src">@drawable/btn_like_day_playlist</item>
    </style>

    <style name="btn_play_pause_playlist">
        <item name="buttonStyle" type="style">@style/btn_play_pause_playlist</item>
        <item name="android:src">@drawable/play_btn_day</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="tablayout_mediateka">
        <item name="buttonStyle" type="style">@style/tablayout_mediateka</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="day_night_theme">
        <item name="buttonStyle" type="style">@style/day_night_theme</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="day_night_bottom_navigation_view">
        <item name="buttonStyle" type="style">@style/day_night_bottom_navigation_view</item>
        <item name="itemTextColor">@color/bottom_nav_view_color_day</item>
        <item name="itemIconTint">@color/bottom_nav_view_color_day</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
    <style name="color_for_btm_nav_view_top" >
        <item name="tint">@color/light_grey</item>
    </style>

</resources>
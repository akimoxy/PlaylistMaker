<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mediatekaFragment">

    <activity
        android:id="@+id/rootActivity"
        android:name="com.example.playlistmaker.root.ui.RootActivity"
        android:label="RootActivity" />
    <fragment
        android:id="@+id/mediatekaFragment"
        android:name="com.example.playlistmaker.mediateka.ui.playlists.MediatekaFragment"
        android:label="MediatekaFragment" >
        <action
            android:id="@+id/action_mediatekaFragment_to_audioPlayerActivity"
            app:destination="@id/audioPlayerActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerActivity2"
            app:destination="@id/audioPlayerActivity" />
    </fragment>
    <activity
        android:id="@+id/audioPlayerActivity"
        android:name="com.example.playlistmaker.presentation.ui.UiAudioPlayerActivity.AudioPlayerActivity"
        android:label="activity_audio_player" />
</navigation>
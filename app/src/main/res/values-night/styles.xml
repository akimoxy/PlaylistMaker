<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="buttonStyle">@style/main_button</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size26</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_mini_icons</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="settings_btn" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/padding16</item>
        <item name="android:trackTint">@color/light_blue</item>
        <item name="android:thumbTint">@color/blue</item>

    </style>

    <style name="settings_btn_switch" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_switch</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/light_blue</item>
        <item name="iconPadding">@dimen/padding16</item>
    </style>

    <style name="settings_btn_title" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top18</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size26</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_btn_title_icon" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/settings_btn_title_icon</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top18</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="main_menu" parent="">
        <item name="background">@color/black</item>
    </style>

    <style name="search_line" parent="">
        <item name="android:textColorHint">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="iconTint">@color/black</item>

    </style>

    <style name="color_rv_search" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="color_rv_search_small_text" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="no_results_placeholder" parent="">
        <item name="android:src">@drawable/no_results_search_item_dark_mode</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="server_error_placeholder" parent="">
        <item name="android:src">@drawable/server_error_dark_mode</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black_white_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="white_at_night_black_at_day">
        <item name="buttonStyle">@style/white_at_night_black_at_day</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_at_night_black_at_day_medium" parent="@style/white_at_night_black_at_day">
        <item name="buttonStyle" type="style">@style/white_at_night_black_at_day_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="white_at_night_black_at_day_regular" parent="@style/white_at_night_black_at_day">
        <item name="buttonStyle" type="style">@style/white_at_night_black_at_day_medium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="btn_add_to_playlist">
        <item name="buttonStyle" type="style">@style/btn_add_to_playlist</item>
        <item name="android:src">@drawable/add_to_playlist_night</item>
    </style>

    <style name="btn_like_playlist">
        <item name="buttonStyle" type="style">@style/btn_like_playlist</item>
        <item name="android:src">@drawable/btn_like_night_playlist</item>
    </style>

    <style name="btn_play_pause_playlist">
        <item name="buttonStyle" type="style">@style/btn_play_pause_playlist</item>
        <item name="android:src">@drawable/play_btn_day</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>
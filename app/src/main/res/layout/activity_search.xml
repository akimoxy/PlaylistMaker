<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button_search"
            style="@style/settings_btn_title_icon"
            android:contentDescription="@string/back_button"
            app:icon="@drawable/back_icon"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/padding_mini_icons"
            app:iconSize="48dp"
            tools:ignore="RtlHardcoded,VisualLintButtonSize,VisualLintBounds,TouchTargetSizeCheck" />

        <TextView
            style="@style/settings_btn_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/search"
            tools:ignore="NestedWeights,DuplicateSpeakableTextCheck" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_mini_icons"
        android:background="@drawable/rounded_edit_text"
        android:drawableStart="@drawable/search_icon_light">

        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edit_text"
            android:drawableStart="@drawable/search_icon_light"
            android:drawablePadding="@dimen/search_icon_padding"
            android:gravity="start"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/padding"
            android:textColor="@color/text_black_search"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="@dimen/text_size_small"
            app:cornerRadius="@dimen/corner_radius_mini_icons"
            tools:ignore="LabelFor,TextContrastCheck,VisualLintTextFieldSize" />

        <Button
            android:id="@+id/clear_icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:textColor="@color/text_black_search"
            android:visibility="gone"
            app:icon="@drawable/light_mode_clear_button"
            app:iconGravity="end"
            app:iconTint="@color/text_grey"
            tools:ignore="VisualLintButtonSize" />
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp4"
        tools:context=".mediateka.ui.MediatekaActivity"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button_mediateka"
            style="@style/settings_btn_title_icon"
            android:contentDescription="@string/back_button"
            android:drawableStart="@drawable/back_icon"
            app:iconSize="@dimen/dp48"
            app:layout_constraintEnd_toStartOf="@id/title_text_mediateka"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints,RtlHardcoded,TouchTargetSizeCheck,VisualLintBounds,VisualLintButtonSize" />

        <TextView
            android:id="@+id/title_text_mediateka"
            style="@style/settings_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/dp12"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/mediateka"
            android:textSize="@dimen/tittle_text_size22"
            app:layout_constraintLeft_toRightOf="@id/back_button_mediateka"
            tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints,NestedWeights,RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_mediateka"
        style="@style/tablayout_mediateka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_mediateka"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabIndicatorHeight="3dp"

        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp4"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/back_button"
            style="@style/settings_btn_title_icon"
            android:layout_gravity="start"
            android:contentDescription="@string/back_button"
            app:icon="@drawable/back_icon"
            app:iconGravity="textStart"
            app:iconSize="@dimen/dp48"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints,RtlHardcoded,TouchTargetSizeCheck,VisualLintBounds,VisualLintButtonSize" />

        <TextView
            style="@style/settings_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/dp12"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/settings"
            android:textSize="@dimen/tittle_text_size22"
            app:layout_constraintLeft_toRightOf="@id/back_button"
            tools:ignore="DuplicateSpeakableTextCheck,MissingConstraints,NestedWeights,RtlSymmetry" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        android:orientation="horizontal">

        <TextView
            style="@style/settings_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/padding16"
            android:text="@string/nigt_theme"
            tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry,VisualLintBounds" />

        <Switch
            android:id="@+id/night_theme_switch_settings"
            style="@style/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText,UseSwitchCompatOrMaterialXml,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/settings_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/padding16"
            android:paddingTop="@dimen/dp19"
            android:paddingBottom="@dimen/margin_top18"
            android:text="@string/share"
            tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry" />

        <Button
            android:id="@+id/share_button_settings"
            style="@style/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/share"
            android:minHeight="@dimen/dp48"
            app:icon="@drawable/light_mode_share"
            app:iconGravity="textEnd"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/settings_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/padding16"
            android:paddingTop="@dimen/dp19"
            android:paddingBottom="@dimen/margin_top18"
            android:text="@string/support"
            tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry" />

        <Button
            android:id="@+id/write_to_support_button"
            style="@style/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/support"
            android:minHeight="@dimen/dp48"
            app:icon="@drawable/light_mode_support"
            app:iconGravity="textEnd"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/settings_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/padding16"
            android:paddingTop="@dimen/dp19"
            android:paddingBottom="@dimen/margin_top18"
            android:text="@string/terms_of_use"
            tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry" />

        <Button
            android:id="@+id/terms_of_use_button"
            style="@style/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/terms_of_use"
            android:minHeight="@dimen/dp48"
            app:icon="@drawable/light_mode_arrow_forward"
            app:iconGravity="textEnd"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>
</LinearLayout>

